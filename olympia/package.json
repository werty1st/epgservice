{
  "name": "ecms_p12_epg_aggregator",
  "version": "1.0.0",
  "description": "setup: npm install -g tsd; tsd install mocha should --save; install jshint plugin in vscode;",
  "config": {
    "database": "ecms",
    "logLevel": "info",
    "ecms": {
      "delta": true,
      "startdate": "2014-02-06",
      "enddate": "2014-02-23",
      "proto": "https",
      "host": "eventcms.zdf.de",
      "path": "/xml/olympia2014/epg/"
    },
    "p12": {
      "proto": "http",
      "range": 10
    },
    "useragent": "request (nodejs) - Olympia/ECMS (HRNM - Webmaster/TTP)"
  },
  "scripts": {
    "production:run": "DB=${npm_config_couchdb} logLevel=error node ./app/main.js",
    "production:install": "npm install; cd sofaapp; npm install -g kanso; kanso install; kanso push --minify ${npm_config_couchdb}; cd ..",
    "debug": "DB=${npm_config_couchdb} logLevel=${npm_package_config_logLevel} node ./app/main.js",
    "inspect": "DB=${npm_config_couchdb} logLevel=${npm_package_config_logLevel} node --debug-brk=5858 ./app/main.js",
    "debug:watch": "watch 'DB=${npm_config_couchdb} logLevel=${npm_package_config_logLevel} node ./app/main.js'",
    "debug:s1": "DB=${npm_config_couchdb_sofa1} node ./app/main.js",
    "debug:s2": "DB=${npm_config_couchdb_sofa2} node ./app/main.js",
    "push": "cd sofaapp; kanso push ${npm_config_couchdb}/${npm_package_config_database}; cd ..",
    "push:s2": "cd sofaapp; kanso push ${npm_config_couchdb_sofa2}/${npm_package_config_database}; cd ..",
    "push:watch": "watch 'npm run push'",
    "push:s2:watch": "watch 'npm run push:s2'"
  },
  "main": "./app/main.js",
  "author": "ronny adams",
  "license": "GPL-3.0",
  "readme": "readme.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/werty1st/epgservice.git#apiv2"
  },
  "dependencies": {
    "moment": "^2.11.0",
    "nano": "^6.1.5",
    "request": "^2.69.0",
    "underscore": "^1.8.3",
    "winston": "^2.2.0",
    "winston-daily-rotate-file": "^1.0.1",
    "xml-flow": "^0.4.0",
    "xpath-stream": "0.0.8"
  },
  "devDependencies": {
    "jshint": "^2.9.1-rc2",
    "kanso": "^0.5.0",
    "watch": "^0.17.1"
  }
}
